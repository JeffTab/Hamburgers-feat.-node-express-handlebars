<div class="row">
  <div class="col-12 col-md-3">
    <h2>Create a Burger</h2>
    <form id="burger-form">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Burger name" name="burger-name" />
      </div>
      <button class="btn btn-block btn-outline-success">Submit Burger</button>
    </form>
  </div>

  <div class="col-12 col-md-9">
    <div class="card mb-4">
      <h3 class="card-header">
        Burgers Not Devoured
      </h3>
      <ul class="list-group-flush">
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            <button class="btn btn-info devourBurger" data-burgerid="{{this.id}}">
              Devour Me
            </button>
            <button class="btn btn-danger deleteBurger" data-burgerid="{{this.id}}">
              Delete Me
            </button>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="card mb-4">
      <h3 class="card-header">
        Burgers Devoured
      </h3>
      <ul class="list-group-flush">
        {{#each burgers}}
        {{#if this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            <button class="btn btn-danger deleteBurger" data-burgerid="{{this.id}}">
              Delete Me
            </button>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<script src="./assets/js/burgers.js" type="text/javascript"></script>