<div class="row">
    <div class="col-12 col-md-3">
        <h2>Create a Burger</h2>
        <form id="burger-form">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Burger name!" name="burger-name" />
            </div>
            <button class="btn btn-block btn-outline-success">Submit New Burger</button>
        </form>
    </div>

    <div class="col-12 col-md-9">
        <div class="card mb-4">
            <h3 class="card-header">
                Burgers not Eaten
            </h3>
            <ul class="list-group-flush">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item d-flex justify-content-between align-items-center align-center">
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <button class="btn btn-info adoptburger" data-burgerid="{{this.id}}">
                            Adopt Me
                        </button>
                        <button class="btn btn-danger devourburger" data-burgerid="{{this.id}}">
                            Devour Me
                        </button>
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="card mb-4">
            <h3 class="card-header">
                burgers Adopted
            </h3>
            <ul class="list-group-flush">
                {{#each burgers}}
                {{#if this.adopted}}
                <li class="list-group-item d-flex justify-content-between align-items-center align-center">
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <button class="btn btn-danger devourburger" data-burgerid="{{this.id}}">
                            Devour Me
                        </button>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>


</div>

<script src="./assets/js/burgers.js" type="text/javascript"></script>